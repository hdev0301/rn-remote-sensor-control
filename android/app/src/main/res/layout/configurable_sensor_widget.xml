<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/iconWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="60sp"
                android:background="@color/white"
                android:layout_weight="0.3">

                <ImageView
                    android:id="@+id/iconSensor"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/on_light"
                    android:padding="8sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="60sp"
                android:background="@color/white"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSensorType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outdoor Temp."
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange"/>

                <TextView
                    android:id="@+id/txtSensorValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textColor="@color/orange"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/txtHistoryInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last updated 20 mins ago"
                    android:textColor="@color/darkGray"
                    android:textSize="8sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
